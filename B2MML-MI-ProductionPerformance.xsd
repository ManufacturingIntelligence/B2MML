<xsd:import     namespace="http://www.mesa.org/xml/B2MML-MI-AllExtensions" 
                schemaLocation="B2MML-MI-AllExtensions.xsd"/>

<!-- Include the Common schema   -->

  <xsd:include  schemaLocation = "B2MML-MI-Common.xsd"/>
